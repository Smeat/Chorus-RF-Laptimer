<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/group_selection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/remove_group_button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/remove_group" />

        <Button
            android:id="@+id/add_group_button"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/add_group" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:text="@string/setup_calibrate_timers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCalibrate"
            android:enabled="false"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <Button
            android:text="@string/start_race"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnStartRace"
            android:enabled="false" />

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/elvResults" />
    </LinearLayout>
</LinearLayout>